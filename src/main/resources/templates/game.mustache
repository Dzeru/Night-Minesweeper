<!DOCTYPE html>
<html xmlns:=http://www.w3.org/1999/xhtml>
<head>
    {{> meta}}
    <title>Night Minesweeper</title>
</head>
<body class="sticky-footer-body">
<section class="sticky-footer-section">
    <div class="invitation padding-cntr" align="center">
        <div>
        {{#phrases}}
            {{.}}<br>
        {{/phrases}}
        </div>
    </div>
</section>
<div class="container pb-4">
    <form action="/gamestep" method="post">
        <div class="row">
            <input type="hidden" name="horizontal" value="{{#horizontal}}{{horizontal}}{{/horizontal}}">
            <input type="hidden" name="vertical" value="{{#vertical}}{{vertical}}{{/vertical}}">
            <input type="hidden" name="field" value="{{#field}}{{field}}{{/field}}">
            <input type="hidden" name="flags" value="{{#flags}}{{flags}}{{/flags}}">
            <div class="col vpc" align="center">
                <img id="mine" src="/images/mine.svg" alt="Mines: "> <input class="input-count-mines" type="text" readonly name="countOfMines" value="{{#countOfMines}}{{countOfMines}}{{/countOfMines}}">
            </div>
            <div class="col vpc" align="center">
                <table align="center">
                    <tbody align="center">
                        <tr>
                            <td class="td-square">
                                <button class="bgrd no-border" type="submit" name="step" value="northwest">
                                    <img class="interface-icon" src="/images/northwest-arrow.svg">
                                </button>
                            </td>
                            <td class="td-square">
                                <button class="bgrd no-border" type="submit" name="step" value="north">
                                    <img class="interface-icon" src="/images/north-arrow.svg">
                                </button>
                            </td>
                            <td class="td-square">
                                <button class="bgrd no-border" type="submit" name="step" value="northeast">
                                    <img class="interface-icon" src="/images/northeast-arrow.svg">
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td class="td-square">
                                <button class="bgrd no-border" type="submit" name="step" value="west">
                                    <img class="interface-icon" src="/images/west-arrow.svg">
                                </button>
                            </td>
                            <td class="td-square">{{#i18n}}phrase.steps{{/i18n}}</td>
                            <td class="td-square">
                                <button class="bgrd no-border" type="submit" name="step" value="east">
                                    <img class="interface-icon" src="/images/east-arrow.svg">
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td class="td-square">
                                <button class="bgrd no-border" type="submit" name="step" value="southwest">
                                    <img class="interface-icon" src="/images/southwest-arrow.svg">
                                </button>
                            </td>
                            <td class="td-square">
                                <button class="bgrd no-border" type="submit" name="step" value="south">
                                    <img class="interface-icon" src="/images/south-arrow.svg">
                                </button>
                            </td>
                            <td class="td-square">
                                <button class="bgrd no-border" type="submit" name="step" value="southeast">
                                    <img class="interface-icon" src="/images/southeast-arrow.svg">
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col vpc" align="center">
                <table align="center">
                    <tbody align="center">
                        <tr>
                            <td class="td-square"><input type="radio" name="flag" value="northwest"></td>
                            <td class="td-square"><input type="radio" name="flag" value="north"></td>
                            <td class="td-square"><input type="radio" name="flag" value="northeast"></td>
                        </tr>
                        <tr>
                            <td class="td-square"><input type="radio" name="flag" value="west"></td>
                            <td class="td-square">{{#i18n}}phrase.flags{{/i18n}}</td>
                            <td class="td-square"><input type="radio" name="flag" value="east"></td>
                        </tr>
                        <tr>
                            <td class="td-square"><input type="radio" name="flag" value="southwest"></td>
                            <td class="td-square"><input type="radio" name="flag" value="south"></td>
                            <td class="td-square"><input type="radio" name="flag" value="southeast"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>
</body>
</html>