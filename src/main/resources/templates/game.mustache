<!DOCTYPE html>
<html xmlns:=http://www.w3.org/1999/xhtml>
<head>
    {{> meta}}
    <title>Night Minesweeper</title>
</head>
<body class="sticky-footer-body">
<section class="sticky-footer-section">
    <div class="invitation padding-cntr" align="center">
        Try don't die
        <div>
        {{#phrases}}
            {{.}}<br>
        {{/phrases}}
        </div>
        <div>

        </div>
    </div>
</section>
<div class="container pb-4">
    <form action="/gamestep" method="post">
    <div class="row">
            <input type="hidden" name="x" value="{{#x}}{{x}}{{/x}}">
            <input type="hidden" name="y" value="{{#y}}{{y}}{{/y}}">
            <input type="hidden" name="field" value="{{#field}}{{field}}{{/field}}">
            <input type="hidden" name="flags" value="{{#flags}}{{flags}}{{/flags}}">
            <div class="col" style="border: 1px solid #fff">
                Mines: {{#countOfMines}}{{countOfMines}}{{/countOfMines}}
            </div>
            <div class="col" style="border: 1px solid #fff">
                <table>
                    <tr>
                        <th><input type="ratio" name="step" value="northwest"></th>
                        <th><input type="ratio" name="step" value="north"></th>
                        <th><input type="ratio" name="step"  value="northeast"></th>
                    </tr>
                    <tr>
                        <th><input type="ratio" name="step"  value="west"></th>
                        <th><input type="submit" value="STEP"></th>
                        <th><input type="ratio" name="step"  value="east"></th>
                    </tr>
                    <tr>
                        <th><input type="ratio" name="step"  value="southwest"></th>
                        <th><input type="ratio" name="step"  value="south"></th>
                        <th><input type="ratio" name="step"  value="southeast"></th>
                    </tr>
                </table>
            </div>
            <div class="col" style="border: 1px solid #fff">
                <table>
                    <tr>
                        <th><input type="ratio" name="flag" value="northwest"></th>
                        <th><input type="ratio" name="flag" value="north"></th>
                        <th><input type="ratio" name="flag"  value="northeast"></th>
                    </tr>
                    <tr>
                        <th><input type="ratio" name="flag"  value="west"></th>
                        <th><input type="submit" value="FLAG"></th>
                        <th><input type="ratio" name="flag"  value="east"></th>
                    </tr>
                    <tr>
                        <th><input type="ratio" name="flag"  value="southwest"></th>
                        <th><input type="ratio" name="flag"  value="south"></th>
                        <th><input type="ratio" name="flag"  value="southeast"></th>
                    </tr>
                </table>
            </div>
    </div>
    </form>
</div>
</body>
</html>